<div class="container dashboard-card">
    <h1>Dashboard</h1>
    <p class="subtitle">Welcome, <span style="color: var(--primary);"><%= user.email %></span></p>

    <div class="stats-grid">
        <div class="stat-box">
            <div class="stat-val"><%= db_status %></div>
            <div class="stat-label">Database</div>
        </div>
        <div class="stat-box">
            <div class="stat-val"><%= cpu_limit %></div>
            <div class="stat-label">CPU Limit</div>
        </div>
        <div class="stat-box">
            <div class="stat-val"><%= mem_limit %></div>
            <div class="stat-label">RAM Limit</div>
        </div>
        <div class="stat-box">
            <div class="stat-val"><%= env %></div>
            <div class="stat-label">Environment</div>
        </div>
    </div>

    <form action="/logout" method="POST">
        <button type="submit" class="logout-btn">Sign Out</button>
    </form>
</div>
